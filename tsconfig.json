{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "outDir": "./dist", 
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/config/db/schema/post.schema.ts", "src/config/db/schema/user.schema.ts"] // helps to compile all the files in the src folder
}